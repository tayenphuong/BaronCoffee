
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Lịch sử giao dịch</h2>

<table>
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày đặt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.ProductID</td> <!-- Thay thế bằng tên sản phẩm nếu cần -->
                <td>@order.Quantity</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>@order.OrderDate</td>
            </tr>
        }
    </tbody>
</table>