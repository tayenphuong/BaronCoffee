        <div class="top-head">

            <a href="~/Home/Index"><img src="~/Content/images/logo1.png" class="logo" /></a>

            <div class="list-background">
                <ul class="list">


                    <li>
                        <a href="@Url.Action("CategoryPage", "Home")" class="menu1">Thực đơn</a>

                    </li>

                    <li><a href="~/Home/Recruit" class="menu1">Tuyển dụng</a></li>
                    <li class="dropdown-btn"><a href="~/Home/DiaChi" class="menu1">Địa chỉ</a></li>
                    <li><a href="~/Home/Address" class="menu1">Lịch sử mua hàng</a></li>
