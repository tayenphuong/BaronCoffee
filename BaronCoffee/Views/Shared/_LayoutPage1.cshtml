            width: 50%;
            height: fit-content;
            margin-top: 8px;
            padding: 0;
        }

        .list {
            display: flex;
            align-items: center;
            justify-content: space-around;
        }

            .list li a {
                width: fit-content;
                font: bold 18px arial,;
            }

        /* thanh menu */
        .menu1 {
            font-size: 20px;
            color: black;
            display: inline-block;
            block-size: 35px;
            text-decoration: none;
            padding: 10px;
            width: fit-content;
        }

            .menu1:hover {
                color: white;
                display: inline-block;
                text-decoration: none;
                padding: 10px;
                background-color: #4B7864;
                width: fit-content;
                border: 1px solid #cccc;
                border-radius: 8px;
            }

        /*thành phần trong thanh menu : trang chủ, thực đơn,...*/


        /*-------------------------------------------- body trang home ------------------------------------------------------------------*/


        .image2 {
            display: block;
            width: 100%;
            height: 50%;
            padding: 20px 0px;
            border-radius: 2px;
        }






        .prod-name {
            display: flow;
            padding-top: 4px;
        }

        .prod-name-list {
            text-align: center;
            text-decoration: none;
        }

        .prod-name a {
            color: white;
            position: relative;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .prod-name li a:hover {
            color: lightpink;
        }

        .prod-name li a::after {
            position: absolute;
            content: '\203A';
            left: -50px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .prod-name li a:hover::after {
            opacity: 1;
        }
        /*-------------------------------------sp noi bat : trang home----------------------------------------------- */
        #featureProd {
            text-align: center;
            padding: 10px;
        }

        .prod-list {
            width: 100%;
            background-color: #4B7864;
            height: fit-content;
            margin-bottom: 20px;
            width: 100%;
        }

        h2 {
            font-size: 20px;
            vertical-align: middle;
            font-style: italic;
            color: white;
            font-weight: bold;
            padding: 5px;
        }

        .prod-container {
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: auto;
        }
        /*khối sản phẩm bán chạy */
        .List_BestSeller_Prod {
            display: flex;
            flex-grow: 1;
            align-items: center;
            overflow: auto;
            white-space: nowrap;
            padding: 10px;
            justify-content: space-evenly;
        }
        /*khung từng sản phẩm*/
        .prod {
            width: fit-content;
            padding: 10px;
            background-color: #EFEDED;
            border-radius: 12px;
        }

        .prod-item {
            width: 100%;
            height: 150px;
            transition: transform 0.2s ease;
        }


        .prod-box {
            /*            width: 150px;
                height: 150px;*/
            border-radius: 12px;
            transition: transform 0.2s ease;
        }
        /*animation hover*/
        .prod:hover {
            transform: translateY(-3px);
            box-shadow: 2px 2px 18px grey;
            padding: 10px;
        }


        /*tên sản phẩm*/
        h3 {
            font-size: 16px;
            color: black;
            font-weight: bold;
            padding: 3px;
            font-style: italic;
            margin: 0;
        }



        .prod-price {
            font-size: 12px;
            color: green;
            margin: 0;
        }
        /*------------------------------------------------------footer------------------------------------------------------------------*/
        .footer {
            background-color: #b5b4b4;
            color: #4B7864;
            clear: both;
            display: flex;
            justify-content: space-around;
            gap: 80px;
            height: fit-content;
            padding: 10px;
        }

            .footer img {
                width: 45px;
                height: 45px;
            }

            .footer p {
                margin: auto 0;
                font-size: 15px;
            }

        .Team-name {
            color: black;
            font: 50 18px Inter,;
        }
    </style>

</head>
<body>
    @* header *@
