@model BaronCoffee.Models.Order

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Chi Tiết Đơn Hàng</h2>
    <div class="details-container">
        <h4>Thông Tin Khách Hàng</h4>
        <p><strong>Tên:</strong> @Model.Customer.CustomerName</p>
        <p><strong>Địa Chỉ Giao Hàng:</strong> @Model.AddressDelivery</p>
        <p><strong>Ngày Đặt Hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Tổng Tiền:</strong> @Model.TotalAmount.ToString("C")</p>
    </div>

    <h4>Sản Phẩm Đặt Mua</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Product.ProductName</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice.ToString("C")</td>
                    <td>@(detail.Quantity * detail.UnitPrice).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Quay lại danh sách", "Index", new {@class = "btn"})
</p>
<style type="text/css">
    h2 {
        margin-bottom: 20px;
        color: #444;
    }

    /* Thông tin chi tiết */
    .details-container {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .details-container h4 {
            margin-bottom: 10px;
            font-size: 18px;
            color: #555;
        }

        .details-container p {
            margin: 5px 0;
        }
    .btn {
        display: inline-block;
        padding: 8px 12px;
        font-size: 14px;
        text-decoration: none;
        color: white;
        background-color: #007bff;
        border-radius: 4px;
        border: none;
        cursor: pointer;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
</style>