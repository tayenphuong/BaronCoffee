                        <span class="cart-count">0</span>
                    </a>
                </li>
                @*--------------------------------------------------------------------login--------------------------------*@
                <li class="dropdown">
                    @if (Session["Username"] != null)
                    {
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle" id="selection"><img src="~/Content/images/Character-icon.png" class="selection-image" />Xin chào!@Session["Username"]</a>
                        <div class=" dropdown-menu">
                            @Html.ActionLink("Thông tin tài khoản", "ProfileInfo", "Account", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })

                            @Html.ActionLink("Lịch sử giao dịch", "OderHistory", "ShoppingCart", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })


                            @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Account", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })
                        </div>
                    }
                    else
                    {
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle" id="selection"><img src="~/Content/images/Character-icon.png" class="selection-image" />Tài khoản<span class="caret"></span></a>

                        <div class="dropdown-menu">
                            @Html.ActionLink("Đăng nhập", "Login", "Account", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })
                            @Html.ActionLink("Đăng ký", "Register", "Account", new { area = "" }, new { @class = "dropdown-item", @style = "color: black; width: 100%" })
                        </div>

                    }
                </li>
            </ul>

        </div>

        @*--------------------------- thanh menu ---------------------------*@


    </div>
    <div class="container" style="margin:0 auto">
        @RenderBody()
    </div>
    <div class="footer">
