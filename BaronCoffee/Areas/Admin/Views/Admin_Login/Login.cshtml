@model BaronCoffee.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="color:black; text-align:center">Đăng nhập</h2>
@using (Html.BeginForm("Login", "Admin_Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên đăng nhập
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mật khẩu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div>
        <label for="RememberMe">
            @Html.CheckBox("rememberMe") Nhớ mật khẩu?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
}

