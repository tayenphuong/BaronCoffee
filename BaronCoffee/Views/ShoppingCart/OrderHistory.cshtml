@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using BaronCoffee.Models
@model BaronCoffee.Models.ViewModel.CheckoutVM
<style>
    body {
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
    }

    .checkout-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #4B7864;
        font-size: 28px;
    }

    .order-summary {
        margin-bottom: 30px;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 5px;
        background-color: #f8f8f8;
    }

        .order-summary h3 {
            margin-bottom: 15px;
            color: #333;
        }

        .order-summary p {
            font-size: 16px;
            margin: 5px 0;
        }

    table.table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        table.table th, table.table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        table.table th {
            background-color: #f5f5f5;
            font-weight: bold;
            color: #333;
        }

        table.table img {
            width: 100px;
            height: auto;
            object-fit: cover;
            border-radius: 5px;
        }

    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    button.btn-danger, a.btn-primary {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    button.btn-danger {
        background-color: #dc3545;
        color: white;
    }

        button.btn-danger:hover {
            background-color: #c82333;
        }

    a.btn-primary {
        background-color: #007bff;
        color: white;
    }

        a.btn-primary:hover {
            background-color: #0056b3;
        }

</style>

<div class="checkout-container">
    <h1>Lịch Sử Đơn Hàng</h1>

    <div class="order-summary">
        <h3>Thông Tin Lịch Sử Đơn Hàng</h3>
        <p><strong>Tổng tiền:</strong> @ViewBag.TotalPrice VNĐ</p>
        <p><strong>Tổng số lượng sản phẩm:</strong> @ViewBag.TotalQuantity</p>

        <h4>Chi Tiết Sản Phẩm:</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình Ảnh</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Thành Tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td><img src="@item.ProductImage" alt="Product Image" /></td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice VNĐ</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity * item.UnitPrice) VNĐ</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="action-buttons flex-container">
        <!-- Nút Hủy Đơn Hàng -->
        <form action="@Url.Action("CancelOrder")" method="post" class="action-buttons text-right">
            <button type="submit" class="btn btn-danger">Hủy Đơn Hàng</button>
        </form>
        <!--Về lại trang chủ-->
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Về Lại Trang Chủ</a>
    </div>
    
</div>