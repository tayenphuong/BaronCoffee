@model BaronCoffee.Models.ViewModel.ChangePasswordVM

@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2 style="color:black; text-align:center">Thay đổi mật khẩu</h2>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Username)
        <div class="form-group">
            <label>Mật khẩu hiện tại</label>
            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Nhập mật khẩu hiện tại" })
            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Mật khẩu mới</label>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Nhập mật khẩu mới" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Xác nhận mật khẩu</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>


    <button type="submit" class="btn btn-danger">Cập nhật</button>
}

<style>
    /* Toàn bộ form */
    .form-horizontal {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    /* Tiêu đề */
    h2 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: black;
    }

    /* Nhãn */
    .form-group label {
        font-weight: bold;
        color: #555;
        display: block;
        margin-bottom: 5px;
    }

    /* Input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

        .form-control::placeholder {
            color: #aaa;
            font-style: italic;
        }

    /* Nút */
    button.btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 30px;
    }

        button.btn-danger:hover {
            background-color: #bd2130;
            border-color: #bd2130;
        }

    /* Validation messages */
    .text-danger {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
    }
</style>

