@model BaronCoffee.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2 style="color:black; text-align:center">Thông tin tài khoản</h2>
@using (Html.BeginForm("ProfileInfo", "Account", FormMethod.Post))
{
    <dl class="khungthongtin">
        @Html.HiddenFor(m => m.Username)
        <dt>
            <label>Tên người dùng</label>
        </dt>
        <dd>

            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @style = "width: fit-content", @readonly = "readonly" })
        </dd>

        <dt>
            <label>Số điện thoại</label>
        </dt>
        <dd>
            @Html.TextBoxFor(m => m.CustomerPhone, new { @class = "form-control", @style = "width: fit-content", @readonly = "readonly" })
        </dd>
        <dt>
            <label>Email</label>
        </dt>
        <dd>
            @Html.TextBoxFor(m => m.CustomerEmail, new { @class = "form-control", @style = "width: fit-content", @readonly = "readonly" })
        </dd>
        <dt>
            <label>Địa chỉ</label>
        </dt>
        <dd>
            @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control", @style = "width: fit-content", @readonly = "readonly" })
        </dd>
    </dl>
    <p style="margin:30px 0;">
        <a href="@Url.Action("UpdateProfile", "Account")" class="btn btn-dark">Cập Nhật Thông Tin</a> |
        <a href="@Url.Action("Index", "Home")" class="btn btn-info">Quay lại</a>
    </p>
}

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .khungthongtin {
        width: fit-content;
        padding: 30px;
        margin: 0 auto;
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .khungthongtin dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .khungthongtin dd {
            margin: 0 0 15px 0;
        }

            .khungthongtin dd input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                font-size: 14px;
                background-color: #f5f5f5;
            }



    .btn {
        padding: 10px 15px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-dark {
        background-color: #333;
        color: #fff;
    }

        .btn-dark:hover {
            background-color: #555;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    p.text-success {
        color: green;
        font-weight: bold;
        text-align: center;
        margin-top: 10px;
    }
</style>


