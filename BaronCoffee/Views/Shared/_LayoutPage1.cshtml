            height: auto;
        }

        .search-container {
            position: relative;
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 400px;
            margin: 20px auto;
        }

        .search {
            width: 100%;
            padding: 10px 40px 10px 15px;
            border: none;
            border-radius: 20px;
            outline: none;
            font-size: 18px;
            background-color: #CCCC;
        }

        .search-button {
            position: absolute;
            right: 10px;
            border: none;
            top: 15%;
            bottom: 0;
            border: none;
            cursor: pointer;
            width: 70px;
            height: 35px;
            border-radius: 8px;
            background: none;
            font-size: 18px;
            color: #555;
        }

            .search-button i {
                color: #555;
                font-size: 18px;
            }

