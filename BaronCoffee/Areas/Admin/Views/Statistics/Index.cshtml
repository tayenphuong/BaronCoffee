@model List<BaronCoffee.Areas.Admin.Controllers.CustomerOrderStatistic>

@{
    ViewBag.Title = "Thống kê đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<h2 class="page-title">Thống kê đơn hàng của khách hàng</h2>

<div class="statistics-container">
    <table class="table-custom">
        <thead>
            <tr>
                <th></th>
                <th>Tên khách hàng</th>
                <th>Email</th>
                <th>Số lượng đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].CustomerName</td>
                    <td>@Model[i].CustomerEmail</td>
                    <td>@Model[i].OrderCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    * {max-width: 1500px;
       max-height: 1000px;
    }
    /* Căn chỉnh container chính */
    .statistics-container {
        width: 80%;
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề trang */
    .page-title {
        text-align: center;
        margin-top: 20px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    /* Bảng tùy chỉnh */
    .table-custom {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        text-align: left;
        background-color: #fff;
    }

        /* Header của bảng */
        .table-custom thead tr {
            background-color: #4CAF50;
            color: white;
            text-transform: uppercase;
        }

        .table-custom thead th {
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ddd;
        }

        /* Hàng dữ liệu */
        .table-custom tbody tr {
            transition: background-color 0.3s ease;
        }

            .table-custom tbody tr:nth-child(odd) {
                background-color: #f2f2f2;
            }

        .table-custom tbody td {
            padding: 10px;
            border: 1px solid #ddd;
            font-size: 14px;
            color: #333;
        }

            /* Số thứ tự */
            .table-custom tbody td:first-child {
                text-align: center;
                font-weight: bold;
                color: #4CAF50;
            }
</style>
