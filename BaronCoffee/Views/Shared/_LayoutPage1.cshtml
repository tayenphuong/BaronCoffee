            font-size: 14px;
        }

        .menu {
            display: flex;
        }

            .menu a {
                color: white;
                font-size: 18px;
            }

        #selection {
            margin-right: 35px;
            color: black;
        }

        .selection-image {
            width: 20px;
            height: 20px;
            margin-right: 4px;
        }
        /*thanh menu*/
